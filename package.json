# 1. Créer le dossier du projet
mkdir genlove-v4.5
cd genlove-v4.5

# 2. Initialiser le projet
npm init -y

# 3. Installer les dépendances
npm install express mongoose cors dotenv
npm install --save-dev nodemon

# 4. Créer le fichier .env
echo "MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/genlove" > .env
echo "PORT=3000" >> .env

# 5. Copier le code serveur dans server.js
# (mettez le code que je vous ai fourni dans server.js)

# 6. Lancer l'application
npm start